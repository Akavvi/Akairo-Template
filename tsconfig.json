{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "sourceMap": false,
        "alwaysStrict": true,
        "outDir": "./dist",
        "inlineSourceMap": true,
        "inlineSources": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "incremental": true,
        "skipLibCheck": true,
        "allowUmdGlobalAccess": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*"
    ]
}
